<% @tasks.each do |task| %>
<ul>
  <li>
    <%= link_to "#{task.title}| #{task.details} | completed: #{task.completed}", task_path(task) %>
    <%= link_to "Update", edit_task_path(task) %>
    <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
   </li>
</ul>
<% end %>

